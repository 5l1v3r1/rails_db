<h2>Table: <%= @table.name %></h2>

<hr/>

<dl class="sub-nav">
  <dd><%= link_to 'Records', table_data_path(@table) %></dd>
  <dd class="active"><%= link_to 'Schema', table_path(@table) %></dd>
  <dd><%= select_top_from_table(@table.name) %></dd>
</dl>

<table>
  <thead>
    <tr>
      <% @table.column_properties.each do |key| %>
        <th><%= key.titleize.upcase %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @table.columns.each do |col| %>
      <tr>
        <% @table.column_properties.each do |key| %>
          <td class="<%= key %>"><%= col.send(key) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>